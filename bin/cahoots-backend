'use strict';

var backend = require('../')();
var pkg = require('../package.json');

var port = process.env.PORT = (process.env.PORT || 8080);

function onBoot (err) {
    if (err) {
        return console.error(err.message);
    }
    
    console.log('"%s" is running on port "%d".', pkg.name, port);
}

backend.boot(onBoot);
